{% extends 'ProgBundle::layoutDashboard.html.twig' %}

{% block title %}Consumo Materias Primas{% endblock %}

{% block head %}
<link href="{{ asset('bundles/CenMez/js/jquery/themes/base/jquery.ui.theme.css') }}" rel="stylesheet" type="text/css" />
<link href="{{ asset('bundles/CenMez/js/jquery/themes/base/jquery.ui.datepicker.css') }}" rel="stylesheet" type="text/css" />
<link href="{{ asset('bundles/CenMez/css/flexigrid/flexigrid.css') }}" rel="stylesheet" type="text/css" />

<script src="{{ asset('bundles/CenMez/js/jquery/jquery.validate.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/CenMez/js/flexigrid/flexigridNormal.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/CenMez/js/Informes/MateriasPrimas/ConsumoMateriaPrima.js') }}" type="text/javascript"></script>


<script type="text/javascript">
    $(document).ready(function() {
        inicio(); 
        
    });
</script>

<style>
    .ui-autocomplete-loading {
        background: white url('{{ asset('bundles/sigaind/images/loader.gif') }}') right center no-repeat;
    }
</style>
{% endblock %}
    
{% block content %}

<div id="consulta">
    <div class="row">
        <div class="col-lg-5">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong>INFORME CONSUMO MATERIAS PRIMAS</strong>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-lg-4 control-label">Fecha Inicial:</label>
                        <div class="col-lg-8"> 
                                <input type="text" class="form-control" id="f1" >
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-4 control-label">Fecha Final:</label>
                        <div class="col-lg-8"> 
                                <input type="text" class="form-control" id="f2" >
                        </div>
                    </div>
                    <div id="botonConsulta" class="form-group">
                        <div class="col-lg-9 col-lg-offset-3">
                            <button type="button" class="btn btn-success" onclick="validarEnvio();">
                                <span class="glyphicon glyphicon-search"></span> Aceptar
                            </button>
                            <button type="button" class="btn btn-default" onclick="LimpiarCamposConsulta();">
                                <span class="glyphicon glyphicon-remove-circle"></span>Cancelar
                            </button>
                        </div>
                    </div>
                </div>                
            </div>
        </div>
    </div>
</div>

<div id="divTabla" style="display: none;">
    <div id="info" ></div>        
</div>

{% endblock %}
