                          </td>
                          <td  style="text-align: right">
                              <a class="menulink" href="{{ path('index') }}">
                                <img src="{{ asset('bundles/sigaind/images/logo_medium.png') }}" alt="Sigaind" />
                              </a>
                          </td>                          
                      </tr>

                    </table>                        
                </div>
            Bienvenido: {{ render_esi(controller('siagBundle:Default:UsuarioLogueado', { 'max': 5 }))}}
