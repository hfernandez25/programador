                <form name="forma" id="forma">
                    <table height="430px">
                        <tr>
                            <td style="vertical-align: top">
                                <div id="cuerpo" >
                                {% block content %}
                                         
                                {% endblock %}
                                </div>
                            </td>
                        </tr>
                    </table>
                </form>
        </div>
        
        <div class="content" id="pie" style="text-align: center">
