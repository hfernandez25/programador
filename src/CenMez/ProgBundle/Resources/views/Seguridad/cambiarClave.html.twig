{% extends 'siagBundle::layoutDashboard.html.twig' %}

{% block title %}Cambio de clave{% endblock %}

{% block head %}

<link href="{{ asset('bundles/sonatajquery/themes/base/jquery.ui.theme.css') }}" rel="stylesheet" type="text/css" />
<link href="{{ asset('bundles/sonatajquery/themes/base/jquery.ui.autocomplete.css') }}" rel="stylesheet" type="text/css" />
<link href="{{ asset('bundles/sigaind/css/flexigrid/flexigrid.css') }}" rel="stylesheet" type="text/css" />

<script src="{{ asset('bundles/sigaind/js/jquery/jquery.validate.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/sigaind/js/flexigrid/flexigridNormal.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/sigaind/js/seguridad/cambiarClave.js') }}" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function() {
        inicio();
    });
</script>
<style>
    .ui-autocomplete-loading {
        background: white url('{{ asset('bundles/sigaind/images/loader.gif') }}') right center no-repeat;
    }
	
    .flexigrid div.fbutton .add
    {
        background: url({{ asset('bundles/sigaind/css/images/add.png') }}) no-repeat center left;
    }	

    .flexigrid div.fbutton .delete
    {
        background: url({{ asset('bundles/sigaind/css/images/close.png') }}) no-repeat center left;
    }
    .flexigrid div.fbutton .export
    {
        background: url({{ asset('bundles/sigaind/images/Excel.bmp') }}) no-repeat center left;
    }
</style>
{% endblock %}


{% block content %}
    
<form class="form-horizontal" role="form" id="forma">
    <div class="row">
        <div class="col-lg-5">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong id="titulo">CAMBIO DE CLAVE</strong>
                </div>
                <div class="panel-body">
                    <div class="form-group" class="col-lg-4 control-label">
                        <label class="col-lg-4 control-label">Clave Anterior:</label>
                        <div class="col-lg-8">
                            <input type="password" class="form-control" id="oldClave" name="oldClave">
                        </div>
                    </div>
                    <div class="form-group" class="col-lg-4 control-label">
                        <label class="col-lg-4 control-label">Nueva Clave:</label>
                        <div class="col-lg-8">
                            <input type="password" class="form-control" id="newClave" name="newClave">
                        </div>
                    </div>
                    <div class="form-group" class="col-lg-4 control-label">
                        <label class="col-lg-4 control-label">Repita Nueva Clave:</label>
                        <div class="col-lg-8">
                            <input type="password" class="form-control" id="repitClave" name="repitClave" >
                        </div>
                    </div>
                    <div id="botones">
                        <div class="col-lg-9 col-lg-offset-3">
                            <button type="submit" class="btn btn-success submit-button">Guardar</button>
                            <button type="reset" name="cancelar" class="btn btn-default">Cancelar</button>
                        </div>
                    </div>
                    <div id="datosOcultos">
                        <input type="hidden" id="ptw" value="{{ clave }}" name="ptw"/>
                    </div>
                </div>
            </div>
        </div>
    </div> 
</form>
    
{% endblock %}
