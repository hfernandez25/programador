{% extends 'ProgBundle::layoutDashboard.html.twig' %}

{% block title %}Registro de Usuarios{% endblock %}

{% block head %}

<link href="{{ asset('bundles/CenMez/js/jquery/themes/base/jquery.ui.theme.css') }}" rel="stylesheet" type="text/css" />
<link href="{{ asset('bundles/CenMez/js/jquery/themes/base/jquery.ui.autocomplete.css') }}" rel="stylesheet" type="text/css" />
<link href="{{ asset('bundles/CenMez/css/flexigrid/flexigrid.css') }}" rel="stylesheet" type="text/css" />

<script src="{{ asset('bundles/CenMez/js/jquery/jquery.validate.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/CenMez/js/flexigrid/flexigridNormal.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/CenMez/js/seguridad/seguridad.js') }}" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function() {
        inicio();
        listadoUsuarios();
    });
</script>
<style>
    .ui-autocomplete-loading {
        background: white url('{{ asset('bundles/CenMez/images/loader.gif') }}') right center no-repeat;
    }
	
    .flexigrid div.fbutton .add
    {
        background: url({{ asset('bundles/CenMez/css/images/add.png') }}) no-repeat center left;
    }	

    .flexigrid div.fbutton .delete
    {
        background: url({{ asset('bundles/CenMez/css/images/close.png') }}) no-repeat center left;
    }
    .flexigrid div.fbutton .export
    {
        background: url({{ asset('bundles/CenMez/images/Excel.bmp') }}) no-repeat center left;
    }
</style>
{% endblock %}


{% block content %}

<div id="divForm" align="left" class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table id="tblUsuarios" style="display:none"></table>
        </div>
    </div>
</div>
    
<form class="form-horizontal" role="form" id="forma">
    <div id="formulario" style="display:none;">
        <div class="row">
            <div class="col-lg-5">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong id="titulo">NUEVA ENFERMEDAD</strong>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Usuario:</label>
                            <div class="col-lg-8"> 
                                <input type="text" class="form-control" id="usuario" name="usuario" required>
                            </div>
                        </div>
                        <div class="form-group" class="col-lg-4 control-label">
                            <label class="col-lg-4 control-label">Clave:</label>
                            <div class="col-lg-8">
                                <input type="password" class="form-control" id="clave" name="clave" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Trabajador:</label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" id="traid" name="" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Grupo:</label>
                            <div class="col-lg-8">
                                <select class="form-control" id="grupo" name="grupo" required> </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Estado:</label>
                            <div class="col-lg-8">
                                <select class="form-control" id="estado" name="estado" required> </select>
                            </div>
                        </div>
                        <div id="botones">
                            <div class="col-lg-9 col-lg-offset-3">
                                <button type="button" onclick="guardarUsuario();" class="btn btn-success submit-button">Guardar</button>
                                <button type="button" onclick="Cancelar();" name="cancelar" class="btn btn-default">Cancelar</button>
                            </div>
                        </div>
                        <div id="datosOcultos">
                            <input type="hidden" id="usuid" value="0" name="usuid"/>
                            <input type="hidden" id="escritura" name="escritura" value="1"/>
                            <input type="hidden" id="update" name="update" value="1"/>
                            <input type="hidden" id="delete" name="delete" value="1"/>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    </div>
</form>
    
{% endblock %}
